package main.pac;

import java.util.logging.Logger;

import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class FreezeTag extends JavaPlugin{
	public static FreezeTag FT;
	public final Logger logger = Logger.getLogger("Minecraft");
	
	@Override
	public void onEnable(){
		this.logger.info(ChatColor.GREEN + "[Freeze Tag]" + ChatColor.WHITE + ": Plugin Enabled!");
	}

	@Override
	public void onDisable(){
		this.logger.info(ChatColor.GREEN + "[Freeze Tag]" + ChatColor.WHITE + ": Plugin Disabled!");
	}
	
	public boolean onCommand(CommandSender sender, Command cmd, String commandLabel, String[] args){{
		Player p = (Player) sender;
		if(commandLabel.equalsIgnoreCase("freezetag")){
			if(p.hasPermission("ft.help")){
				p.sendMessage(ChatColor.GOLD + "---Commands For Freezetag---");
				p.sendMessage(ChatColor.GREEN + "/Freezetag" + ChatColor.WHITE + ": Displays this help screen!");
				p.sendMessage(ChatColor.GREEN + "");
			}
		}
		}return false;
	}
}
